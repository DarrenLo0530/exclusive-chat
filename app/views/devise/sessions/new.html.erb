<div class="container">
    <div class="row justify-content-center mb-3">
        <div class="col-10">
            <h2>Sign in</h2>
        </div>
    </div>

    <div class="row justify-content-center mb-3">
        <div class="col-10">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
                <div class="form-group">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email", class: "form-control"} %>
                </div>
                <div class="form-group">
                    <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password", class: "form-control"} %>
                </div>
                <div class="form-group">
                    <%= f.input :remember_me, input_html: {class: "mr-3"}, label_html: {class: "form-check-label"}, as: :boolean if devise_mapping.rememberable?%>
                </div>
            </div>
            <div class="form-actions">
                <%= f.button :submit, "Sign in", class: "btn btn-primary"%>
            </div>
            <% end %>
        </div>
    </div>

    <div class="row justify-content-center mb-3">
        <div class="col-10">    
            <%= render "devise/shared/links" %>
        </div>
    </div>

</div>

