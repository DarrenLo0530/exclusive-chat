<!DOCTYPE html>
<html>
  <head>
    <title>ExclusiveChat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.notice %>
        <div class= "alert alert-primary" role="alert">
            <%= notice %>
        </div>
    <% end %>
    <% if flash.alert %>
        <div class= "alert alert-danger" role="alert">
            <%= alert %>
        </div>
    <% end %>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-5">
        <%= link_to "ExclusiveChat", root_path, class: "navbar-brand"%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <%= link_to "Post", new_post_path, class: "btn btn-primary" %>
                </li>
                <% if member_signed_in? %>
                    <li class="nav-item">
                        <%= link_to "Sign Out", destroy_member_session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}, class: "btn btn-light"%>
                    </li>

                <% else %>
                    <li class="nav-item">
                        <%= link_to "Sign Up", new_member_registration_path, class: "btn btn-light"%>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Sign In", new_member_session_path, class: "btn btn-light"%>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>

    <%= yield %>

    <footer class="footer text-secondary bg-dark text-center">
        <span>ExclusiveChat</span>
    </footer>
  </body>
</html>
